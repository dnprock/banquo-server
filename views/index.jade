extends layout

block content

  #wrap
    //
       Begin page content 
    .container
      .page-header
        h2
          | <a href="https://vida.io/" class="logo">VIDA.IO</a> -  
          = title
      
      h5 Generate PNG for SVG and website.
  
      
      h3 Image Generation from URL
  
      .row
        .col-md-9
          .form-group
            label Page URL
            input#url.form-control(type="text", value="https://vida.io/documents/WgBMc4zDWF7YpqXGR")
  
      .row
        .col-md-2
          .form-group
            label Viewport Width
            input#viewport_width.form-control(type="text", value="980")
          .form-group
            label Viewport Height
            input#viewport_height.form-control(type="text", value="900")
          
        
        .col-md-3
          .form-group
            label Page Load Wait Time (ms)
            input#delay.form-control(type="text", value="5000")
    
          .form-group
            label HTML Selector (Ex: #canvas)
            input#selector.form-control(type="text", value="#canvas")
       
        .col-md-3
          .form-group
            label.checkbox(style="margin:0 auto;") Thumbnail
              input#thumbnail(type="checkbox")
            input#dimension.form-control(type="text", placeholder="Dimension: default 256x144")
            
          .form-group
            label.checkbox(style="margin:0 auto;") Trim Whitespace
              input#trim(type="checkbox")
      .row
        .col-md-2
          button(type="button", class="btn btn-primary has-spinner" id="view-image")
            span.spinner
              i.fa.fa-spinner.fa-spin
            | View Image

        .col-md-2  
          button#generate-url.btn.btn-primary(data-target="#modalImageURL", role="button", data-toggle="modal") Generate URL
      
      #error-message
        div(class="alert alert-danger")
          span(id="error-content")
  
      #image_preview
  
      #modalImageURL.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
              h4.modal-title Image Generation URL
        
            .modal-body
              .image_url
                a(href="http://image.vida.io/api/" id="image_url_link" target="_blank", style="word-wrap: break-word;")
          
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
      
      br
    
      h3 Using 'image.vida.io' for your site

      p <a href="http://github.com/dnprock/banquo-server" target="_blank">Go here to see more info about JSONP</a>
      
  #footer
    .container
      .row
        .col-md-12
          h6 Question? Send us an email <a href="mailto:contact@vida.io">contact@vida.io</a>
